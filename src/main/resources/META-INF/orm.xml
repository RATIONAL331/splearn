<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.hibernate.org/xsd/orm/mapping
                                     https://hibernate.org/xsd/orm/mapping/mapping-3.1.0.xsd">
    <access>FIELD</access>

    <mapped-superclass class="com.example.splearn.domain.AbstractEntity">
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="IDENTITY"/>
            </id>
        </attributes>
    </mapped-superclass>

    <entity class="com.example.splearn.domain.member.Member">
        <table name="member">
            <unique-constraint name="UK_MEMBER_EMAIL">
                <column-name>email_address</column-name>
            </unique-constraint>
        </table>
        <attributes>
            <basic name="nickname">
                <column name="nickname" nullable="false"/>
            </basic>
            <basic name="password">
                <column name="password" nullable="false"/>
            </basic>
            <basic name="status">
                <column name="status" nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <one-to-one name="detail" fetch="LAZY" optional="false">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>
            <embedded name="email">

            </embedded>
        </attributes>
    </entity>

    <entity class="com.example.splearn.domain.member.MemberDetail">
        <table name="member_detail">
            <unique-constraint name="UK_PROFILE_ADDRESS">
                <column-name>profile_address</column-name>
            </unique-constraint>
        </table>
        <attributes>
            <basic name="introduction">
                <column name="introduction" nullable="true"/>
            </basic>
            <basic name="registeredAt">
                <column name="registered_at" nullable="false"/>
            </basic>
            <basic name="activatedAt">
                <column name="activated_at" nullable="true"/>
            </basic>
            <basic name="deactivatedAt">
                <column name="deactivated_at" nullable="true"/>
            </basic>
            <embedded name="profile">

            </embedded>
        </attributes>
    </entity>

    <embeddable class="com.example.splearn.domain.shared.Email">
        <attributes>
            <basic name="address">
                <column name="email_address" nullable="false"/>
            </basic>
        </attributes>
    </embeddable>

    <embeddable class="com.example.splearn.domain.member.Profile">
        <attributes>
            <basic name="address">
                <column name="profile_address" nullable="true"/>
            </basic>
        </attributes>
    </embeddable>
</entity-mappings>